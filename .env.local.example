# ==========================================
# LOCAL DEVELOPMENT ENVIRONMENT
# Copy this to .env for local development
# ==========================================

# Django Core
SECRET_KEY=django-insecure-local-dev-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Local PostgreSQL)
POSTGRES_DB=gts
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# CORS (Allow local frontend)
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=

# Redis / Celery (Local)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# SAP Integration (Disabled for local dev)
SAP_ENABLED=False
SAP_BASE_URL=
SAP_USERNAME=
SAP_PASSWORD=

# Email (Console backend for local dev)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=GTS Local <noreply@localhost>

# Firebase (Mock mode for local dev)
FIREBASE_CREDENTIALS_FILE=firebase-credentials.json
FCM_MOCK_MODE=True

# Sentry (Disabled for local dev)
SENTRY_DSN=

# Token Configuration
TOKEN_EXPIRY_HOURS=24

# Driver Assignment
DRIVER_ASSIGNMENT_TIMEOUT_SECONDS=300
