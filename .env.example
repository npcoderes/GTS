# ==========================================
# Django Core Settings
# ==========================================
SECRET_KEY=your-secret-key-here-generate-with-django
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# ==========================================
# Database Configuration
# ==========================================
POSTGRES_DB=gts
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ==========================================
# CORS Configuration
# ==========================================
# Set to True only in development, False in production
CORS_ALLOW_ALL_ORIGINS=False
# Comma-separated list of allowed origins (e.g., https://app.example.com,https://admin.example.com)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==========================================
# Redis / Celery
# ==========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==========================================
# SAP Integration
# ==========================================
SAP_ENABLED=False
SAP_BASE_URL=http://sap-server:50000/RESTAdapter/
SAP_USERNAME=sap-username
SAP_PASSWORD=sap-password
SAP_TIMEOUT=30
SAP_RETRY_COUNT=3

# ==========================================
# Email Configuration (SMTP)
# ==========================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Sabarmati Gas Limited <no-reply@sgl.com>

# ==========================================
# Firebase Configuration
# ==========================================
# Path to Firebase service account JSON file
FIREBASE_CREDENTIALS_FILE=firebase-credentials.json
FCM_MOCK_MODE=False

# ==========================================
# Sentry Error Tracking (Optional)
# ==========================================
# Leave empty to disable Sentry
SENTRY_DSN=

# ==========================================
# Token Configuration
# ==========================================
# Token expiry in hours (default: 24 hours)
TOKEN_EXPIRY_HOURS=24

# ==========================================
# Driver Assignment Configuration
# ==========================================
# Time limit (in seconds) for driver to accept an assigned trip
DRIVER_ASSIGNMENT_TIMEOUT_SECONDS=300
